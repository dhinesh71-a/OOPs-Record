Test case 5
class Car extends Thread {
    String carName;

    Car(String name) {
        carName = name;
    }

    public void run() {
        for (int i = 1; i <= 5; i++) {
            System.out.println(carName + " step " + i);
            try {
                Thread.sleep(200);
            } catch (Exception e) {
            }
        }
        System.out.println(carName + " is done");
    }
}

public class RaceSimulation {
    public static void main(String[] args) {
        System.out.println("Name = DHINESH KUMAR G");
        System.out.println("Exam Registration Number = 2117240070071");

        Car c1 = new Car("Tesla");
        Car c2 = new Car("Porsche");

        c1.start();
        c2.start();
    }
}
