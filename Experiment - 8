Test case 1
class Car extends Thread {
    String carName;

    Car(String name) {
        carName = name;
    }

    public void run() {
        for (int i = 1; i <= 5; i++) {
            System.out.println(carName + " is at position " + i);
            try {
                Thread.sleep(400);
            } catch (Exception e) {
            }
        }
        System.out.println(carName + " finished the race");
    }
}

public class RaceSimulation {
    public static void main(String[] args) {
        System.out.println("Name = DHINESH KUMAR G");
        System.out.println("Exam Registration Number = 2117240070071");

        Car c1 = new Car("Car A");
        Car c2 = new Car("Car B");

        c1.start();
        c2.start();
    }
}

Test case 2
class Car extends Thread {
    String carName;

    Car(String name) {
        carName = name;
    }

    public void run() {
        for (int i = 1; i <= 6; i++) {
            System.out.println(carName + " at lap " + i);
            try {
                Thread.sleep(500);
            } catch (Exception e) {
            }
        }
        System.out.println(carName + " completed race");
    }
}

