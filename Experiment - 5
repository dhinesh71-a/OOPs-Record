Test case 5
package inheritanceshape;

class Shape {
    double area() {
        return 0.0;
    }
}

class Rectangle extends Shape {
    double length, width;
    Rectangle(double length, double width) {
        this.length = length;
        this.width = width;
    }
    double area() {
        return length * width;
    }
}

public class Project5_Shape {
    public static void main(String[] args) {
        System.out.println("Name = DHINESH KUMAR G");
        System.out.println("Exam Registration Number = 2117240070071");

        Rectangle r = new Rectangle(8, 0);
        System.out.println("Rectangle 8x0 → Area = " + r.area());
    }
}
